# pi-gen options
DEPLOY_ZIP=0
IMG_NAME='RaspbianCloud'
RELEASE='buster'
# Defined later in the stages!
TIMEZONE_DEFAULT='Europe/Amsterdam'
FIRST_USER_NAME='pi'
FIRST_USER_PASS="raspberry"
# STAGE_LIST=stage*


# mender-convert
if ls deploy/*optimized.img >/dev/null 2>&1
then
    DEVICE_TYPE="raspberrypi3"
    RAW_DISK_IMAGE="$(ls -c deploy/*optimized.img | head -n1)"
    ARTIFACT_NAME="$(basename ${RAW_DISK_IMAGE%%.*})"
    MENDER_DISK_IMAGE="${ARTIFACT_NAME}.sdimg"
    MENDER_SERVER="https://hosted.mender.io"
    TENANT_TOKEN="tokent"
fi

# Generic
export DEBIAN_FRONTEND=noninteractive

export LANGUAGE=C
export LANG=C
export LC_ALL=C
